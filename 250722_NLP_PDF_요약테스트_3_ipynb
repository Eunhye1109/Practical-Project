        "##  2. Google Drive 마운트 & 모델 로드"
      ],
      "metadata": {
        "id": "G1nW9EP-YR4m"
      }
    },
    {
      "cell_type": "code",
      "source": [
        "import pdfplumber, re, torch\n",
        "from transformers import BartForConditionalGeneration, PreTrainedTokenizerFast\n",
        "from google.colab import drive\n",
        "\n",
        "# 드라이브 마운트\n",
        "drive.mount('/content/drive')\n",
        "\n",
        "# KoBART Summarization 모델 로드\n",
        "tokenizer = PreTrainedTokenizerFast.from_pretrained('digit82/kobart-summarization')\n",
        "model = BartForConditionalGeneration.from_pretrained('digit82/kobart-summarization').to('cuda' if torch.cuda.is_available() else 'cpu')\n"
      ],
      "metadata": {
        "id": "kX_OjdU8YSL8"
      },
      "execution_count": null,
      "outputs": []
    },
    {
      "cell_type": "code",
      "source": [],
